  <%= form_for(user, :url => user_path) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name%>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <% if user.new_record? %>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>
    </div>
    <% end %>
    <%= f.submit button_text %>     
  <% end %>