<div class = "formcontent">
  <%= form_tag(sessions_path) do %>
  <p>Login:</p>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Login" %>     
  <% end %>

</div>